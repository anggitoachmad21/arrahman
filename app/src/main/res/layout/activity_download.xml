<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/menu_admin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:context=".AdminActivity">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/spaceBottom"
                            android:fontFamily="@font/font_medium"
                            android:text="Form Download Data"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/download_data"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/spaceBottom"
                                android:layout_weight="1"
                                android:background="@drawable/btn_filled_purple"
                                android:paddingStart="@dimen/paddingScreen"
                                android:paddingEnd="@dimen/paddingScreen"
                                android:text="Download Customer"
                                android:textAllCaps="false"
                                android:textColor="@color/text_purple" />


                            <Button
                                android:id="@+id/download_menu"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/spaceBottom"
                                android:background="@drawable/btn_filled_purple"
                                android:paddingStart="@dimen/paddingScreen"
                                android:paddingEnd="@dimen/paddingScreen"
                                android:text="Download Menu"
                                android:textAllCaps="false"
                                android:textColor="@color/text_purple" />

                            <Button
                                android:id="@+id/download_categories"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/spaceBottom"
                                android:background="@drawable/btn_filled_purple"
                                android:onClick="getDailyReportDebit"
                                android:paddingStart="@dimen/paddingScreen"
                                android:paddingEnd="@dimen/paddingScreen"
                                android:text="Download Categories"
                                android:textAllCaps="false"
                                android:textColor="@color/text_purple" />

                            <Button
                                android:id="@+id/download_sub_categories"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/spaceBottom"
                                android:background="@drawable/btn_filled_purple"
                                android:onClick="getDailyReportStock"
                                android:paddingStart="@dimen/paddingScreen"
                                android:paddingEnd="@dimen/paddingScreen"
                                android:text="Download Sub Categories"
                                android:textAllCaps="false"
                                android:textColor="@color/text_purple"
                                android:visibility="visible" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/download_label"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/spaceBottom"
                                android:background="@drawable/btn_filled_purple"
                                android:onClick="getDailyReportStock"
                                android:paddingStart="@dimen/paddingScreen"
                                android:paddingEnd="@dimen/paddingScreen"
                                android:text="Download Labels"
                                android:textAllCaps="false"
                                android:textColor="@color/text_purple"
                                android:visibility="visible" />

                            <Button
                                android:id="@+id/download_tables"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/spaceBottom"
                                android:background="@drawable/btn_filled_purple"
                                android:onClick="getDailyReportTunai"
                                android:paddingStart="@dimen/paddingScreen"
                                android:paddingEnd="@dimen/paddingScreen"
                                android:text="Download Tables"
                                android:textAllCaps="false"
                                android:textColor="@color/text_purple" />

                            <Button
                                android:id="@+id/download_payment"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/spaceBottom"
                                android:background="@drawable/btn_filled_purple"
                                android:onClick="getDailyReportDebit"
                                android:paddingStart="@dimen/paddingScreen"
                                android:paddingEnd="@dimen/paddingScreen"
                                android:text="Download Payment Method"
                                android:textAllCaps="false"
                                android:textColor="@color/text_purple" />

                            <Button
                                android:id="@+id/download_ppn"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/spaceBottom"
                                android:background="@drawable/btn_filled_purple"
                                android:onClick="getDailyReportDebit"
                                android:paddingStart="@dimen/paddingScreen"
                                android:paddingEnd="@dimen/paddingScreen"
                                android:text="Download PPN"
                                android:textAllCaps="false"
                                android:textColor="@color/text_purple" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/download_washer"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/spaceBottom"
                                android:background="@drawable/btn_filled_purple"
                                android:onClick="getDailyReportStock"
                                android:paddingStart="@dimen/paddingScreen"
                                android:paddingEnd="@dimen/paddingScreen"
                                android:text="Download Washer"
                                android:textAllCaps="false"
                                android:textColor="@color/text_purple"
                                android:visibility="visible" />

                            <Button
                                android:id="@+id/download_order"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/spaceBottom"
                                android:background="@drawable/btn_filled_purple"
                                android:onClick="getDailyReportTunai"
                                android:paddingStart="@dimen/paddingScreen"
                                android:paddingEnd="@dimen/paddingScreen"
                                android:text="Download Order"
                                android:textAllCaps="false"
                                android:textColor="@color/text_purple" />

                            <Button
                                android:id="@+id/download_employee"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/spaceBottom"
                                android:background="@drawable/btn_filled_purple"
                                android:onClick="getDailyReportDebit"
                                android:paddingStart="@dimen/paddingScreen"
                                android:paddingEnd="@dimen/paddingScreen"
                                android:text="Download Employee"
                                android:textAllCaps="false"
                                android:textColor="@color/text_purple" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/spaceBottom"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/sharing_customer"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/btn_filled_purple"
                                android:paddingStart="@dimen/paddingScreen"
                                android:paddingEnd="@dimen/paddingScreen"
                                android:text="Sharing file customer"
                                android:textAllCaps="false"
                                android:textColor="@color/text_purple" />

                            <Button
                                android:id="@+id/sharing_sale"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/btn_filled_purple"
                                android:paddingStart="@dimen/paddingScreen"
                                android:paddingEnd="@dimen/paddingScreen"
                                android:text="Sharing file sale"
                                android:textAllCaps="false"
                                android:textColor="@color/text_purple" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/spaceBottom"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/import_customer"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/btn_filled_purple"
                                android:paddingStart="@dimen/paddingScreen"
                                android:paddingEnd="@dimen/paddingScreen"
                                android:text="Import file customer"
                                android:textAllCaps="false"
                                android:textColor="@color/text_purple" />

                            <Button
                                android:id="@+id/import_customer_info"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/btn_filled_purple"
                                android:paddingStart="@dimen/paddingScreen"
                                android:paddingEnd="@dimen/paddingScreen"
                                android:text="Import file customer info"
                                android:textAllCaps="false"
                                android:textColor="@color/text_purple" />


                            <Button
                                android:id="@+id/import_sale"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/btn_filled_purple"
                                android:paddingStart="@dimen/paddingScreen"
                                android:paddingEnd="@dimen/paddingScreen"
                                android:text="Import file sale"
                                android:textAllCaps="false"
                                android:textColor="@color/text_purple" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/spaceBottom"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/clean_data_sales"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/btn_filled_purple"
                                android:paddingStart="@dimen/paddingScreen"
                                android:paddingEnd="@dimen/paddingScreen"
                                android:text="Bersihkan data sales hari ini"
                                android:textAllCaps="false"
                                android:textColor="@color/text_purple" />

                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/lyt_alert"
                        android:layout_width="360dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/paddingScreen"
                        android:layout_marginTop="@dimen/paddingScreen"
                        android:layout_marginEnd="@dimen/paddingScreen"
                        android:layout_marginBottom="@dimen/paddingScreen"
                        android:animateLayoutChanges="true"
                        android:background="@drawable/alert_error"
                        android:orientation="horizontal"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp"
                        android:visibility="invisible">

                        <ImageButton
                            android:id="@+id/btn_close_alert"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="@android:color/transparent"
                            android:contentDescription="@string/warning"
                            android:onClick="hideAlert"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_close" />

                        <TextView
                            android:id="@+id/txt_alert"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="12sp"
                            tools:ignore="RelativeOverlap" />

                    </RelativeLayout>

                </RelativeLayout>

        </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/paddingScreen"
        android:layout_marginTop="@dimen/paddingScreen"
        android:layout_marginEnd="@dimen/paddingScreen"
        android:layout_marginBottom="@dimen/paddingScreen"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/backgroundDownload"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundLoading"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/font_medium"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Downloading Data ..."/>

            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/font_medium"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="("/>

            <TextView
                android:id="@+id/running_download"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/font_medium"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"/>

            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/font_medium"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"/>

            <TextView
                android:id="@+id/max_running_download"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/font_medium"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"/>

            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/font_medium"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")"/>

        </LinearLayout>

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="16dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jangan keluar dari menu admin"/>

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/paddingScreen"
            android:layout_marginBottom="@dimen/paddingScreen"
            android:visibility="visible" />

    </LinearLayout>
</RelativeLayout>